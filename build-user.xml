    <!-- =-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=- -->
    <!-- Package stuff into JARs and so forth.                          -->
    <!-- =-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=- -->
    <target name="package"
            depends="build"
            unless="jarIsCurrent"
            description="Performs all compilation steps, then packages the results.">

        <jar destfile="lib/KETLGeoIP.jar">
            <manifest>
                <attribute name="Main-Class" value=""/>
                <attribute name="Implementation-Vendor" value="Kinetic Networks Inc"/>
                <attribute name="Implementation-Version" value="$$Name:  $$"/>
                <attribute name="Implementation-Title" value="KETL MaxMin GeoIP Example"/>
            </manifest>

 			<fileset dir="build" >
			    <include name="**/maxmind/*"/>
			    <include name="**/GeoIPTransformation*"/>
            </fileset>
        </jar>

         <jar destfile="lib/KETLGPLExtensions.jar">
            <manifest>
                <attribute name="Main-Class" value=""/>
                <attribute name="Implementation-Vendor" value="Kinetic Networks Inc"/>
                <attribute name="Implementation-Version" value="$$Name:  $$"/>
                <attribute name="Implementation-Title" value="KETL GPL Extension"/>
            </manifest>

			 <fileset dir="build" >
			    <exclude name="**/maxmind/*"/>
			    <exclude name="**/GeoIPTransformation*"/>
            </fileset>
        </jar>
        
    </target>


